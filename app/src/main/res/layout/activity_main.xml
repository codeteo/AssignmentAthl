<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?colorPrimary">

        <com.assignment.teo.features.main.views.SimpleToolbar
            android:id="@+id/main_toolbar"
            app:title="@string/main_toolbar_search_text"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/toolbar_margin"
            android:elevation="8dp" />

    </FrameLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:shimmer_auto_start="true">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/main_title_text_1"
                android:gravity="center"
                android:textSize="@dimen/main_title_textsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/main_title_text_2"
                android:gravity="center"
                android:textSize="@dimen/main_title_textsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</LinearLayout>